# DELTA Environment Variables

# Development
VITE_APP_NAME=DELTA
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development

# API Configuration (for future backend integration)
# VITE_API_BASE_URL=http://localhost:3001/api
# VITE_API_TIMEOUT=10000

# Map Services (for future map integration)
# VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Geolocation Settings
VITE_GEOLOCATION_TIMEOUT=10000
VITE_GEOLOCATION_MAX_AGE=60000
VITE_GEOLOCATION_HIGH_ACCURACY=true

# Tracking Configuration
VITE_TRIP_MIN_DURATION=120000
VITE_GEOFENCE_RADIUS=100
VITE_IDLE_TIMEOUT=300000
VITE_MIN_SPEED_THRESHOLD=5

# Storage
VITE_STORAGE_PREFIX=delta_
VITE_MAX_STORED_TRIPS=100

# Analytics (for future analytics integration)
# VITE_ANALYTICS_ID=your_analytics_id
# VITE_SENTRY_DSN=your_sentry_dsn

# Feature Flags
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_NOTIFICATIONS=true
